generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Student {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String        @unique
  parentEmail String?
  createdAt   DateTime      @default(now())
  sessions    ExamSession[]
}

model ExamSession {
  id             String         @id @default(auto()) @map("_id") @db.ObjectId
  studentId      String         @db.ObjectId
  student        Student        @relation(fields: [studentId], references: [id])
  mode           String
  subject        String
  chapters       String
  totalMarks     Int
  duration       Int
  startTime      DateTime       @default(now())
  endTime        DateTime?
  status         String         @default("active")
  violationCount Int            @default(0)
  autoSubmitted  Boolean        @default(false)
  questions      Question[]
  answers        StudentAnswer[]
  result         ExamResult?
  createdAt      DateTime       @default(now())
}

model Question {
  id             String         @id @default(auto()) @map("_id") @db.ObjectId
  sessionId      String         @db.ObjectId
  session        ExamSession    @relation(fields: [sessionId], references: [id])
  questionNumber Int
  section        String
  type           String
  questionText   String
  options        String?
  correctAnswer  String
  solution       String
  marks          Int
  negativeMarks  Float          @default(0)
  chapterName    String
  difficulty     String
  imageUrl       String?
  hasSubParts    Boolean        @default(false)
  subParts       String?
  answers        StudentAnswer[]
  createdAt      DateTime       @default(now())
}

model StudentAnswer {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  questionId     String      @db.ObjectId
  question       Question    @relation(fields: [questionId], references: [id])
  sessionId      String      @db.ObjectId
  session        ExamSession @relation(fields: [sessionId], references: [id])
  answerText     String?
  answerImageUrl String?
  isCorrect      Boolean?
  marksAwarded   Float?
  aiFeedback     String?
  modelAnswer    String?
  submittedAt    DateTime    @default(now())
}

model ExamResult {
  id                String      @id @default(auto()) @map("_id") @db.ObjectId
  sessionId         String      @unique @db.ObjectId
  session           ExamSession @relation(fields: [sessionId], references: [id])
  totalMarks        Int
  marksObtained     Float
  percentage        Float
  sectionBreakdown  String
  chapterBreakdown  String
  strengths         String?
  weaknesses        String?
  recommendations   String?
  emailSent         Boolean     @default(false)
  generatedAt       DateTime    @default(now())
}
